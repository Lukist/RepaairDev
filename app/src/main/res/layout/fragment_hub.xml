<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.Hub"
    android:background="@color/mainWhite"
    >

    <ImageView
        android:id="@+id/hubLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo_rd3"/>

    <TextView
        android:id="@+id/hubDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/hubLogo"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"

        android:layout_marginBottom="15dp"
        android:gravity="center"
        android:text="Bienvenido al sistema administrativo"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/hubSubtitile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/hubDescription"
        android:text="Aqui podra registrar y controlas los aparatos en reparacion"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:gravity="center"
        android:textStyle="bold"
        />

    <!--
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/hubDescription"
        android:layout_centerHorizontal="true"
        android:text="Agregar un nuevo aparato"
        android:textSize="19dp"
        android:padding="10dp"
        android:typeface="serif"
        android:letterSpacing="0.2"
        android:textStyle="bold"/>
    -->

</RelativeLayout>